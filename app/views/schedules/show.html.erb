
<div style="margin: 70px 0px 0px 70px" >
<p>
  <strong>内容</strong>
  <%= @schedule.content %>
</p>

<p>
  <strong>日時</strong>
  <%= @schedule.start_time.strftime("%m-%d") %>
</p>

<%= link_to '編集', edit_schedule_path(@schedule) %>
<%= link_to '削除',schedule_path(@schedule.id), method: :delete, id: "delete_button", data: { confirm: '本当に削除しますか?' } %>
<%= link_to '戻る', schedules_path %>
</div>
