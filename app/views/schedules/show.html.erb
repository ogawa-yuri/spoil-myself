<p id="notice"><%= notice %></p>
<div class="show">

<p>
  <strong>内容</strong>
  <%= @schedule.content %>
</p>

<p>
  <strong>日時</strong>
  <%= @schedule.start_time.strftime("%m-%d") %>
</p>

<%= link_to '編集', edit_schedule_path(@schedule) %>
<%= link_to '消去',schedule_path(@schedule.id), method: :delete, data: { confirm: '本当に削除しますか?' } %>
<%= link_to '戻る', schedules_path %>
</div>
