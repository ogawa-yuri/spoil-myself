#edit
<div class="cover-user-edit">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">プロフィール編集</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @user, local:true do |f| %>
      <div class="form-group">
        <label class="form-label">名前</label>
        <%= f.text_field :name, autofocus: true, placeholder:"名前", class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">メールアドレス</label>
        <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス", class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">パスワード</label>
        <%= f.password_field :password, autofocus: true, placeholder:"6文字以上", class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">パスワード(確認）</label>
        <%= f.password_field :password, autofocus: true, placeholder:"6文字以上", class: "form-control" %>
      </div>

      <div class="form-group">
        <!-- <label class="form-label">プロフィール画像</label><br>
        <#%= attachment_image_tag @user, :image, size: '100x100', fallback: "no_image.png", class: "mb-3 profile-img" %><br>
        <#%= f.attachment_field :image, placeholder: "プロフィール画像" %> -->
      </div>
      <%= f.submit '保存する', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
